{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "tools in ['Edit', 'Write']",
        "hooks": [
          { "type": "command", "command": "npm run format" },
          { "type": "command", "command": "npm test -- --passWithNoTests" }
        ]
      },
      {
        "matcher": "tools == '*'",
        "hooks": [
          {
            "type": "command",
            "command": "mkdir -p ~/.claude/logs && echo \"$(date -u +%Y-%m-%dT%H:%M:%SZ): Used $CLAUDE_TOOL_NAME\" >> ~/.claude/logs/$(date -u +%Y%m%d%H)_usage.log"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "tools == '*'",
        "hooks": [{ "type": "command", "command": "npm run usage:report" }]
      }
    ]
  }
}
