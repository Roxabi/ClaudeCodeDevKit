{
  "name": "devcontainer-template",
  "version": "1.0.0",
  "description": "Team development environment template with Claude Code and VSCode",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "echo 'Add your development server command here'",
    "build": "echo 'Add your build command here'",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "node tests/unit/devcontainer/devcontainer-config.test.js && node tests/unit/devcontainer/dockerfile-validation.test.js && node tests/unit/devcontainer/runtime-environment.test.js",
    "test:integration": "node tests/integration/environment/env-validation.test.js && node tests/integration/environment/container-ips.test.js && node tests/integration/services/services.test.js && node tests/integration/services/host-services.test.js && node tests/integration/devcontainer/development-tools.test.js && node tests/integration/devcontainer/port-forwarding.test.js",
    "test:e2e": "node tests/e2e/devcontainer/run-all-tests.js",
    "test:unit:devcontainer": "node tests/unit/devcontainer/devcontainer-config.test.js && node tests/unit/devcontainer/dockerfile-validation.test.js && node tests/unit/devcontainer/runtime-environment.test.js",
    "test:integration:environment": "node tests/integration/environment/env-validation.test.js && node tests/integration/environment/container-ips.test.js",
    "test:integration:services": "node tests/integration/services/services.test.js && node tests/integration/services/host-services.test.js",
    "test:integration:devcontainer": "node tests/integration/devcontainer/development-tools.test.js && node tests/integration/devcontainer/port-forwarding.test.js",
    "test:all": "npm run test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist build .next out coverage",
    "setup": "npm install && npm run format && npm run lint:fix",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "ccusage": "ccusage",
    "ccusage:daily": "ccusage daily",
    "ccusage:session": "ccusage session"
  },
  "keywords": [
    "devcontainer",
    "vscode",
    "claude-code",
    "development-environment"
  ],
  "author": "Mickael",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/node": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^15.0.0",
    "prettier": "^3.6.2",
    "tsx": "^4.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
